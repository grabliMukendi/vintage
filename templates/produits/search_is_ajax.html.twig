{% for produit in produits %}
    <div class="row">
        <div class="col-4 autompleteImg mb-3">
            {% for image in produit.image %}
                {% if loop.first %}
                    <a href="{{ path('fiche_produit', { 'id' : produit.id, 'slug' : produit.slug }) }}"><img src="{{ asset('images/produits/') ~ image.imageName }}" alt="{{ produit.titre }}" class="img-fluid">
                {% endif %}
            {% endfor %}
            </a>
        </div>
        <div class="col-8 title autompleteTitle">
            <a href="{{ path('fiche_produit', { 'id' : produit.id, 'slug' : produit.slug }) }}">
                {{ produit.titre | striptags | truncate(50,true) | raw }}
            </a>
        </div>
    </div>
{% endfor %}