{% if stringSaisie is not empty %}
    <h5 class="mb-4 successAlerto">
        <strong>{{ nbSearch }}</strong>
        produit{{ (nbSearch > 1) ? 's' : '' }}
        correspond{{ (nbSearch > 1) ? 'ent' : '' }}
        Ã 
        <span class="alerto">"{{ stringSaisie }}"</span>
    </h5>
