{% extends 'base_index.html.twig' %}

{% set title = 'Acceuil' %}

{% block content %}
	
	<h1 class="title text-white text-center">Parcourir les cat√©gories</h1>
	<div class="row__category mt-4">
		{% for tendance in tendances %}
			<div class="category__card">
				{% for image in tendance.image %}
					{% if loop.first %}
						<img class="img-fluid" src="{{ asset('images/produits/') ~ image.imageName }}" alt="{{ tendance.titre }}">
					{% endif %}
				{% endfor %}
				<div class="category__redirect">
					<a href="{{ path('categorie_tendance_products', { 'cat' : tendance.categorie.nom, 'rubrique' : tendance.rubrique }) }}">
						<div class="category__name">{{ tendance.categorie.nom | capitalize }}</div>
						<i class="icon-add-1"></i>
					</a>
				</div>
			</div>
		{% endfor %}

